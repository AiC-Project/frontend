{
  "name": "front-end-app",
  "version": "0.1.0",
  "description": "Front-end application for Android in Cloud project.",
  "repository": {
    "type": "git",
    "url": "git@git.android-in-cloud.com:aic_vm/front-end-app.git"
  },
  "scripts": {
    "test": "npm run test-unit",
    "test-integration-phantom": "cucumber.js --require test/local-phantom.js ./test/features/",
    "check-code-style": "xo",
    "xo": "xo",
    "test-unit": "ava --tap | tap-nyan",
    "test-unit-full": "ava",
    "coverage": "nyc --extension .jsx npm run test-unit && nyc report --reporter=lcov",
    "start": "gulp watch",
    "build": "gulp build",
    "create-conf-from-env": "gulp create-conf-from-env",
    "no-console": "echo \"Verifying for console usage. Please use debug package instead.\" && ! grep -rnw 'src' -e \"console\" && echo \"Yes! No console.something being used! Good Job!\""
  },
  "browserify": {
    "extension": [
      ".jsx"
    ],
    "transform": [
      [
        "babelify",
        {
          "presets": [
            "stage-0",
            "es2015",
            "react"
          ]
        }
      ]
    ]
  },
  "author": "Karine Pires",
  "dependencies": {
    "attr-accept": "^1.0.3",
    "babel": "^6.5.2",
    "babel-core": "^6.6.0",
    "babel-eslint": "^5.0.0",
    "babel-polyfill": "^6.6.1",
    "babel-preset-es2015": "^6.6.0",
    "babel-preset-react": "^6.5.0",
    "babel-preset-stage-0": "^6.5.0",
    "babelify": "^7.2.0",
    "browser-sync": "^2.11.1",
    "browserify": "^13.0.0",
    "debug": "^2.2.0",
    "deep-extend": "^0.4.1",
    "envify": "^3.4.0",
    "gulp": "^3.9.1",
    "gulp-autoprefixer": "^3.1.0",
    "gulp-babel": "^6.1.2",
    "gulp-less": "^3.0.5",
    "gulp-notify": "^2.2.0",
    "gulp-sourcemaps": "^1.6.0",
    "gulp-util": "^3.0.7",
    "highlight.js": "^9.2.0",
    "material-ui": "^0.15.0-alpha.1",
    "mdi": "^1.4.57",
    "noVNC": "git+https://github.com/kanaka/noVNC.git",
    "pretty-hrtime": "^1.0.2",
    "promise-polyfill": "^3.1.0",
    "react": "^0.14.7",
    "react-addons-css-transition-group": "^0.14.7",
    "react-dom": "^0.14.7",
    "react-dropzone": "^3.3.2",
    "react-router": "^2.0.0",
    "react-tap-event-plugin": "0.2.2",
    "reflux": "^0.3.0",
    "require-dir": "^0.3.0",
    "sanitize-html": "^1.11.3",
    "schema-inspector": "^1.6.4",
    "slug": "^0.9.1",
    "sprintf": "^0.1.5",
    "underscore": "^1.8.3",
    "vinyl-source-stream": "^1.1.0",
    "watchify": "^3.7.0"
  },
  "devDependencies": {
    "ava": "^0.12.0",
    "cucumber": "^0.9.5",
    "cucumber-mink": "1.1.0",
    "eslint-config-xo-react": "^0.5.0",
    "eslint-plugin-react": "^4.1.0",
    "nyc": "git+https://github.com/lloydcotten/nyc.git",
    "tap-nyan": "0.0.2",
    "xo": "^0.12.1"
  },
  "xo": {
    "esnext": true,
    "extends": [
      "xo-react"
    ],
    "ignores": [
      "build/**/*"
    ]
  },
  "ava": {
    "files": [
      "!./test/local-phantom.js",
      "./test/unit/**/*.js"
    ],
    "failFast": true,
    "verbose": true,
    "require": "babel-core/register"
  },
  "nyc": {
    "extensions": [
      ".jsx"
    ]
  },
  "babel": {
    "presets": [
      "react",
      "es2015",
      "stage-0"
    ],
    "sourceMaps": "both"
  }
}
