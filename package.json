{
  "name": "front-end-app",
  "version": "0.1.0",
  "description": "Front-end application for Android in Cloud project.",
  "repository": {
    "type": "git",
    "url": "git@git.android-in-cloud.com:aic_vm/front-end-app.git"
  },
  "scripts": {
    "test": "npm run test-unit",
    "test-integration-phantom": "cucumber.js --require test/local-phantom.js ./test/features/",
    "check-code-style": "xo",
    "test-unit": "ava --tap | tap-nyan",
    "test-unit-full": "ava",
    "coverage": "nyc --extension .jsx npm run test-unit && nyc report --reporter=lcov",
    "start": "gulp",
    "postinstall": "gulp lib",
    "build": "gulp build",
    "create-conf-from-env": "gulp create-conf-from-env"
  },
  "browserify": {
    "transform": [
      [
        "reactify",
        {
          "es6": true
        }
      ]
    ]
  },
  "author": "Karine Pires",
  "dependencies": {
    "attr-accept": "^1.0.1",
    "material-ui": "^0.11.0",
    "react": "^0.13.3",
    "react-dropzone": "^1.2.4",
    "react-router": "^0.13.3",
    "react-tap-event-plugin": "0.1.7",
    "reflux": "^0.2.12",
    "babel": "^5.8.21",
    "babel-core": "^6.5.1",
    "babel-eslint": "^4.0.10",
    "babel-preset-es2015": "^6.5.0",
    "babel-preset-react": "^6.5.0",
    "babel-preset-stage-0": "^6.5.0",
    "babelify": "^7.2.0",
    "browserify": "^11.0.1",
    "browser-sync": "^2.8.2",
    "debug": "^2.2.0",
    "deep-extend": "^0.4.0",
    "envify": "^3.4.0",
    "gulp": "^3.9.0",
    "gulp-autoprefixer": "^2.3.1",
    "gulp-babel": "^5.2.0",
    "gulp-eslint": "^1.0.0",
    "gulp-jscs": "^2.0.0",
    "gulp-jshint": "^1.11.2",
    "gulp-jsvalidate": "^2.0.0",
    "gulp-less": "^3.0.3",
    "gulp-notify": "^2.2.0",
    "gulp-sourcemaps": "^1.5.2",
    "gulp-util": "^3.0.6",
    "highlight.js": "^8.7.0",
    "jshint-stylish": "^2.0.1",
    "jsxhint": "^0.15.1",
    "mdi": "^1.1.70",
    "noVNC": "git+https://github.com/kanaka/noVNC.git",
    "pretty-hrtime": "^1.0.0",
    "promise-polyfill": "^3.1.0",
    "require-dir": "^0.3.0",
    "sanitize-html": "^1.11.1",
    "schema-inspector": "^1.5.7",
    "sprintf": "^0.1.5",
    "underscore": "^1.8.3",
    "vinyl-source-stream": "^1.1.0",
    "watchify": "^3.3.1"
  },
  "devDependencies": {
    "ava": "^0.11.0",
    "cucumber": "^0.9.4",
    "cucumber-mink": "1.0.2",
    "eslint-config-xo-react": "^0.3.0",
    "eslint-plugin-react": "^3.2.3",
    "nyc": "git+https://github.com/lloydcotten/nyc.git",
    "tap-nyan": "0.0.2"
  },
  "xo": {
    "esnext": true,
    "extends": [
      "xo-react"
    ]
  },
  "ava": {
    "files": [
      "!./test/local-phantom.js",
      "./test/unit/**/*.js"
    ],
    "failFast": true,
    "verbose": true,
    "require": "babel-core/register"
  },
  "nyc": {
    "extensions": [
      ".jsx"
    ]
  }
}
